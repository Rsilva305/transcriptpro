# API URL for backend connection
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_change_this

# Authentication Endpoints
NEXT_PUBLIC_LOGIN_URL=${NEXT_PUBLIC_API_URL}/auth/login
NEXT_PUBLIC_REGISTER_URL=${NEXT_PUBLIC_API_URL}/auth/register

# File Upload Limits (in bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=200000000  # 200MB maximum file size
NEXT_PUBLIC_MAX_DURATION_SECONDS=3600  # 60 minutes maximum duration
